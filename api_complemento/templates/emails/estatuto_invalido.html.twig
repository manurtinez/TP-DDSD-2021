{% extends 'base.html.twig' %}

{% block body %}
    <tr>
        <td align="left">
            <table border="0" width="590" align="center" cellpadding="0" cellspacing="0" class="container590">
                <tr>
                    <td align="left" style="color: #888888; font-size: 16px; font-family: 'Work Sans', Calibri, sans-serif; line-height: 24px;">
                        <!-- section text ======-->
                        <p style="line-height: 24px; margin-bottom:15px;">
                            Hola {{nombre_apoderado}},
                        </p>
                        <p style="line-height: 24px;margin-bottom:15px;">
                            El estatuto que ha subido para la sociedad anonima con nombre {{nombre_sociedad}} es inválido.
                        </p>
                        <p style="line-height: 24px;margin-bottom:15px;">
                            Sugerimos desde el Área Legales de la DNPJ realizar las siguientes correcciones:
                        </p>
                        <ul>
                            {% for observacion in observaciones %}
                                <li>{{ observacion }}</li>
                            {% endfor %}
                        </ul>
                        <p style="line-height: 24px; margin-bottom:20px;">
                            Puede modificar el estatuto desde el siguiente enlace:
                        </p>
                        <table border="0" align="center" width="180" cellpadding="0" cellspacing="0" bgcolor="5caad2" style="margin-bottom:20px;">
                            <tr>
                                <td height="10" style="font-size: 10px; line-height: 10px;">&nbsp;</td>
                            </tr>
                            <tr>
                                <td align="center" style="color: #ffffff; font-size: 14px; font-family: 'Work Sans', Calibri, sans-serif; line-height: 22px; letter-spacing: 2px;">
                                    <!-- main section button -->
                                    <div style="line-height: 22px;">
                                        <a href="{{ url_boton }}" style="color: #ffffff; text-decoration: none;">MODIFICAR ESTATUTO</a>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td height="10" style="font-size: 10px; line-height: 10px;">&nbsp;</td>
                            </tr>
                        </table>
                        <p style="line-height: 24px">
                            Saludos,</br>
                            DNPJ Argentina.
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
{% endblock %}
